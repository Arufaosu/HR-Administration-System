datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Employee {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  telephone String
  email     String
  status    String

  managerId    Int?
  manager      Employee?  @relation("Manager", fields: [managerId], references: [id])
  subordinates Employee[] @relation("Manager")

  departments Department[] @relation("EmployeeDepartments")
  userId      Int          @unique
  user        User         @relation(fields: [userId], references: [id])
}

model Department {
  id        Int        @id @default(autoincrement())
  name      String
  status    String
  employees Employee[] @relation("EmployeeDepartments")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  employee Employee?
}
